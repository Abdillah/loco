; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.blade.php]
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[*.{json,js}]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 4
